{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "server run"
		},
		{
			"type": "cargo",
			"command": "watch",
			"args": ["-i", ".gitignore", "-i", "public/*", "-i", "target/*", "-s", "wasm-pack build --target web --out-dir public/pkg"],
			"group": "build",
			"label": "client watch"
		},
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "run"
		},
		{
			"type": "cargo",
			"command": "watch",
			"problemMatcher": [
				"$rustc"
			], 
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn":["run", "client watch"],
			"label": "all",
		},
		
		{
			"type": "shell",
			"command":["docker", "build", ".", "-t sample"],
			"group": "build",
			"label": "docker build",
		},
	]
}